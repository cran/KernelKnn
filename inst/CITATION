citHeader("Please cite both the package and the original articles / software in your publications:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(
  bibtype = "Manual",
  title   = "{KernelKnn}: Kernel k Nearest Neighbors",
  author  = person("Lampros", "Mouselimis"),
  year    = year,
  note    = note,
  url     = "https://CRAN.R-project.org/package=KernelKnn"
)


